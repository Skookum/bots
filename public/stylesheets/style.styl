body
  font-family "museo-sans" sans-serif
  text-align center
  margin 50px 0

a
  text-decoration none
  color #87ceeb
.hidden
  display none
h1, h2, h3
  font-style italic
  font-weight 900
  text-transform uppercase
h2
  color lightgrey
  font-size 20px
#logout a
  color lightgrey
  margin 0
  position absolute
  right 50px
  top 60px
#back a
  color lightgrey
  margin 0
  position absolute
  left 50px
  top 60px
.howto
  width 600px
  margin auto
  color darkgrey
p, li, ol
  text-align left
  list-style-type decimal
.examples
  margin auto
  width 175px
  &.json
    text-align left
    width 300px
pre
  border 1px solid lightgrey
  margin 5px
  padding 5px

#path-select
  width 1000px
  margin auto
  .choice
    display inline-block
    margin 50px
#update-bot .icon
  width 200px
  height 240px
  background url('/images/botHead.png') no-repeat 0 0
  background-size 100%
  &:hover
    background-position 0 -240px
#view-tournament .icon
  width 300px
  height 299px
  background url('/images/bracket.png') no-repeat 0 0
  background-size 100%
  &:hover
    background-position 0 -299px
#view-history .icon
  width 200px
  height 176px
  background url('/images/history.png') no-repeat 0 0
  background-size 100%
  &:hover
    background-position 0 -178px

.success
  width 600px
  margin auto
  display none
  color green
  text-align center
.error
  width 600px
  margin auto
  display none
  color red

#game-wrapper
  width 1000px
  margin auto
  padding 20px
  br
    clear both
canvas#game
  border 1px solid black
  margin 20px 75px
  float left
#p1, #p2
  float left
  width 170px
  h2
    color black
  h3
    color lightgrey
    font-size 16px
  img
    width 150px
    border-radius 50%
    border 5px solid
#p1
  .headcount
    color red
  img
    border-color red
#p2
  .headcount
    color blue
  img
    border-color blue
#playback
  width 1000px
  margin auto
  padding 10px
  text-align center
#animate-game
  float left
  .icon
    margin auto
    background url('/images/iconSprite.png') no-repeat -23px -26px
    background-size 426px
    width 42px
    height 47px
#controls
  div, h3
    display inline-block
    margin 0 20px
  .beginning
    background url('/images/iconSprite.png') no-repeat -146px -14px
    background-size 426px
    width 40px
    height 23px
  .end
    background url('/images/iconSprite.png') no-repeat -291px -14px
    background-size 426px
    width 40px
    height 23px
  .forward
    background url('/images/iconSprite.png') no-repeat -250px -14px
    background-size 426px
    width 20px
    height 23px
  .back
    background url('/images/iconSprite.png') no-repeat -207px -14px
    background-size 426px
    width 20px
    height 23px

.g_gracket
  width 9999px
  background-color #fff
  padding 55px 15px 5px
  line-height 100%
  position relative
  overflow hidden
.g_round
  float left
  margin-right 70px
.g_game
  position relative
  margin-bottom 15px
  min-width 150px
.g_gracket h3
  margin 0
  padding 10px 8px 8px
  font-size 18px
  font-weight normal
  color #fff
.g_team
  background #CC0000
.g_team:last-child
   background #0033CC
.g_round:last-child
  margin-right 20px
.g_winner
  background #444
.g_winner .g_team
  background none
.g_current
  cursor pointer
  background purple!important
.g_round_label
  top -5px
  font-weight normal
  color #CCC
  text-align center
  font-size 18px
