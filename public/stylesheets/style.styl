body
  font-family "museo-sans", sans-serif
  text-align center
  margin 50px 0

a
  text-decoration none
  color #87ceeb
.hidden
  display none
h1, h2, h3
  font-style italic
  font-weight 900
  text-transform uppercase
h2
  color lightgrey
  font-size 20px
#logout a
  color lightgrey
  margin 0
  position absolute
  right 50px
  top 60px
  &:hover
    color black
#back a
  color lightgrey
  margin 0
  position absolute
  left 50px
  top 60px
  &:hover
    color black
.howto
  width 600px
  margin auto
  color darkgrey
p, li, ol
  text-align left
  list-style-type decimal
  line-height 1.5em
.examples
  margin auto
  width 175px
  &.json
    text-align left
    width 300px
pre
  border 1px solid lightgrey
  padding 5px
  margin auto
  width 300px
  text-align left

#path-select
  width 1000px
  margin auto
  .choice
    display inline-block
    margin 50px
#update-bot .icon
  width 200px
  height 240px
  background url('/images/botHead.png') no-repeat 0 0
  background-size 100%
  &:hover
    background-position 0 -240px
#view-tournament .icon
  width 300px
  height 299px
  background url('/images/bracket.png') no-repeat 0 0
  background-size 100%
  &:hover
    background-position 0 -299px
#view-history .icon
  width 200px
  height 176px
  background url('/images/history.png') no-repeat 0 0
  background-size 100%
  &:hover
    background-position 0 -178px

.success
  width 600px
  margin auto
  display none
  color green
  text-align center
.waiting
  width 600px
  margin auto
  display none
  text-align center
.error
  width 600px
  margin auto
  display none
  color red
#bot-file-dropzone
  border 5px dashed lightgrey
  padding 25px
  margin 25px

#game-wrapper
  width 1000px
  margin auto
  padding 20px
  br
    clear both
canvas#game
  border 1px solid black
  margin 20px 75px
  float left
  &.test
    float none
#p1, #p2
  float left
  width 170px
  h2
    color black
  h3
    color lightgrey
    font-size 16px
  img
    width 150px
    border-radius 50%
    border 5px solid
#p1
  .headcount
    color #F26140
  .energyconsumed
    color lightgrey
  img
    border-color #F26140
  h3
    margin 0
#p2
  .headcount
    color #6EA1D7
  .energyconsumed
    color lightgrey
  img
    border-color #6EA1D7
  h3
    margin 0
.energyconsumed
  font-size 32px
  margin 20px 0 0 0
.headcount
  font-size 72px
  margin 0
#playback
  width 1000px
  margin auto
  padding 10px
  text-align center
#animate-game
  float left
  margin-left 50px
  .icon
    margin auto
    background url('/images/iconSprite.png') no-repeat -23px -26px
    background-size 426px
    width 42px
    height 47px
#controls
  width 650px
  margin auto
  div, h3
    display inline-block
    margin 0 20px
  .beginning
    background url('/images/iconSprite.png') no-repeat -146px -62px
    background-size 426px
    width 40px
    height 23px
    &:hover
      background-position -146px -14px
  .end
    background url('/images/iconSprite.png') no-repeat -291px -62px
    background-size 426px
    width 40px
    height 23px
    &:hover
      background-position -291px -14px
  .forward
    background url('/images/iconSprite.png') no-repeat -250px -62px
    background-size 426px
    width 20px
    height 23px
    &:hover
      background-position -250px -14px
  .back
    background url('/images/iconSprite.png') no-repeat -207px -62px
    background-size 426px
    width 20px
    height 23px
    &:hover
      background-position -207px -14px
  #turn
    width 170px
    .current
      font-size 32px
      margin-left 5px

.gamelist
  width 600px
  margin auto
  & a
    display block
    color lightgrey
    border-top 1px solid lightgrey
    padding 5px
    &:first-child
      border-top none
    &:hover
      color black
  & .desc
    float left
  & .time
    float right
  & br
    clear both

.gist
  width 1000px
  margin auto
  text-align left

.bracket-wrapper
  width 1000px
  margin auto
  border 1px solid black
  overflow hidden
.g_gracket
  cursor move
  font-family helvetica
  width 9999px
  background-color #fff
  padding 55px 15px 5px
  line-height 100%
  position relative
  overflow hidden
.g_round
  float left
  margin-right 70px
.g_game
  position relative
  margin-bottom 15px
.g_gracket h3
  margin 0
  padding 10px 8px 8px
  font-size 18px
  font-weight normal
  color #fff
.g_team
  background #F26140
.g_team:last-child
   background #6EA1D7
.g_round:last-child
  margin-right 20px
.g_winner
  background #444
.g_winner .g_team
  background none
.g_current
  cursor pointer
  background darkgrey!important
.g_round_label
  top -5px
  font-weight normal
  color #CCC
  text-align center
  font-size 18px
